# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
# For local development: mongodb://localhost:27017/Order
# For Docker: mongodb://mongo:27017/Order
MONGO_URI=mongodb://localhost:27017/Order

# JWT Configuration
# IMPORTANT: Must match the secret used by auth-service
# Generate a secure random secret in production
JWT_SECRET=your_jwt_secret_here_must_match_auth_service

# Testing Configuration (for integration tests)
# These are only used during test execution
TEST_MONGO_URI=mongodb://localhost:27017/Order
TEST_JWT_SECRET=test_secret_key_for_integration_tests
